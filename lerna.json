{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "updateInternalDependencies": "version",
            "conventionalCommits": true,
            "ignoreChanges": ["**/*.md", "*.md"],
            "allowBranch": "master"
        }
    }
}
