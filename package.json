{
    "name": "keroro-cli-monorepo",
    "private": true,
    "scripts": {
        "release:beta": "lerna publish --canary --preid beta --dist-tag beta --message 'chore(release): beta publish'",
        "release:stable": "lerna publish --message 'chore(release): stable publish'",
        "format": "prettier --write \"packages/**/*.{js,ts,jsx,tsx,json,md}\"",
        "prepare": "husky",
        "build": "lerna run build"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,json,md}": "prettier --write"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lerna": "^8.2.2",
        "lint-staged": "^15.5.2",
        "prettier": "^3.5.3"
    },
    "dependencies": {
        "axios": "1.9.0",
        "simple-git": "3.27.0"
    }
}
